{
  "name": "tl-service-configurator",
  "version": "1.0.0",
  "description": "Interactive service configurator for Turm & Leufer Webflow site",
  "main": "src/index.js",
  "scripts": {
    "build": "esbuild src/index.js --bundle --minify --outfile=dist/configurator.min.js --format=iife --global-name=TLConfigurator",
    "build:dev": "esbuild src/index.js --bundle --outfile=dist/configurator.js --format=iife --global-name=TLConfigurator --sourcemap",
    "watch": "esbuild src/index.js --bundle --outfile=dist/configurator.js --format=iife --global-name=TLConfigurator --sourcemap --watch"
  },
  "devDependencies": {
    "esbuild": "^0.20.0"
  },
  "keywords": ["webflow", "configurator", "service"],
  "author": "Turm & Leufer",
  "license": "UNLICENSED"
}
